{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug widgetbook_for_widgetbook",
            "cwd": "widgetbook_for_widgetbook",
            "request": "launch",
            "program": "lib/app.widgetbook.dart",
            "type": "dart",
        },
        {
            "name": "Debug CLI",
            "cwd": "packages/widgetbook_cli",
            "request": "launch",
            "program": "bin/cli_debug.dart",
            "type": "dart",
            "args": [
                "--api-key", "abc",
                "--repository", "test-repo",
                "--actor", "jenshor",
                "--git-provider", "CLI",
                "--base-branch", "main"
            ]
        },
        {
            "name": "Debug knobs_example",
            "cwd": "examples/knobs_example",
            "request": "launch",
            "program": "lib/widgetbook.dart",
            "type": "dart"
        },
        {
            "name": "Debug addon_example generator",
            "cwd": "examples/addon_example",
            "request": "launch",
            "program": ".dart_tool/build/entrypoint/build.dart",
            "args": [
                "build", 
                "--delete-conflicting-outputs"
            ],
            "type": "dart"
        },
    ]
}